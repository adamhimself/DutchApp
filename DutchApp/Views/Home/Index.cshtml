  <div class="container">
    <h1 class="display-4">Learn Dutch</h1>
    <p class="lead">Learn Dutch in an effective way today..</p>
  </div>
</div>

<div class="container">
  

  <div aurelia-app="main">Loading...</div>
  @section scripts {
